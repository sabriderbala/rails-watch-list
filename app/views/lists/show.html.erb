<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?horror);">
  <div class="container">
    <h1 class="text-center"><%= @list.name %></h1>
  </div>
</div>

<div class="cards p-5">
    <% @list.movies.each do |movie| %>
      <div class="card-trip m-5 p-3">
        <img src="<%= movie.poster_url %>" alt="movie">
          <div class="card-trip-infos">
            <div>
              <h2><%= movie.title %> <div class="card-trip-pricing"><%= movie.rating %>/10<i class="fa-regular fa-star"></i></div></h2>
              <p><%= movie.overview %></p>
            </div>
          </div>
          <div ><%= link_to "Delete", bookmark_path(@list.bookmarks.find_by(movie: movie)), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: 'btn btn-dark m-2' %></div>
        </div>
    <% end %>

  </div>
  <div class="d-flex justify-content-end p-3">
    <%= link_to "add a movie", new_list_bookmark_path(@list), class: 'btn btn-dark m-2' %>
    <%= link_to "Back to all list", lists_path, class: 'btn btn-dark m-2' %>
</div>
