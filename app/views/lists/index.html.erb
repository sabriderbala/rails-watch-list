<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1460881680858-30d872d5b530?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=3271&q=80;">
  <div class="container">
    <h1><strong>Welcolme to your watch list dashboard</strong></h1>
    <p>Save any kind of movies.</p>

    <%= link_to "Create a movie list", new_list_path, class: "btn btn-outline-light" %>
  </div>
</div>

<div class="container p-3">
  <div class="d-flex justify-content-start">
    <div class="text-center p-2" style="width:200px">
      <h4>MY MOVIE LIST</h4>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <% @lists.each do |list| %>
      <div class="container" style="width: 500px">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, crop: :fill unless list.photo.key.blank? %>)">
        <%= link_to list.name, list_path(list), class: "text-decoration-none", style: "color: white" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-end"><%= link_to "Create a movie list", new_list_path, class: "btn btn-outline-dark m-4" %></div>
</div>
