<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/random/?movies);">
  <div class="container">
    <h1><strong>Welcolme to your watch list dashboard</strong></h1>
    <p>Save any kind of movies.</p>

    <%= link_to "Create a movie list", new_list_path, class: "btn btn-outline-light" %>
  </div>
</div>

<div class="container p-3">
  <div class="d-flex justify-content-start">
    <div class="text-center p-2 border border-dark mb-3" style="width:200px">
      <h2>My List</h2>
    </div>
  </div>
  <div class="d-flex justify-content-center">
    <% @lists.each do |list| %>
      <div class="container" style="width: 500px">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/random/?movies)">
        <%= link_to list.name, list_path(list), class: "text-decoration-none", style: "color: white" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-end"><%= link_to "Create a movie list", new_list_path, class: "btn btn-outline-dark m-4" %></div>

</div>
